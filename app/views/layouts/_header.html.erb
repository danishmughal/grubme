<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel" style="text-align:center">Create A Lunch!</h3>
  </div>
  <div class="modal-body">
     <form id="create-lunch">
       <fieldset>
          <label>Lunch Title:</label>
            <input type="text" placeholder="ex: Pizza Hut">
            <label>Lunch Description:</label>
            <input type="text" placeholder="ex: Celebrating Mary's B-day! ">
            <label>Lunch Time:</label>
            <input type="text" placeholder="ex: 8:00 pm ">
            <label>Lunch Date:</label>
            <input type="text" placeholder="ex: Feb 28, 2013 ">
            <label>Lunch Location:</label>
            <input type="text" placeholder="ex: San Francisco, CA ">
            <span class="help-block">Check the Details One More Time!</span>
       </fieldset>
      </form>
  </div>
  <div class="modal-footer">
    <button class="btn btn-danger btn-large" data-dismiss="modal" aria-hidden="true">Close</button>
    <button type="submit" class="btn btn-danger btn-large">Submit</button>
  </div>
</div>
    